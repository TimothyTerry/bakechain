{
  "name": "bakechain",
  "version": "0.3.0",
  "description": "",
  "main": "main.js",
  "scripts": {
    "postinstall": "install-app-deps",
    "start": "npm install && electron .",
    "pack": "build --dir",
    "dist": "build"
  },
  "author": "Stephen Andrews",
  "license": "ISC",
  "build": {
    "productName": "Bakechain",
    "appId": "io.bakechain.app",
    "files": [
      "node_modules/",
      "app/",
      "main.js",
      "package.json"
    ],
    "mac": {
      "category": "your.app.category.type"
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "NSIS"
    },
    "nsis": {
      "oneClick": true
    },
    "directories": {
      "output": "releases"
    }
  },
  "dependencies": {
    "keytar": "^4.2.1"
  },
  "devDependencies": {
    "electron": "latest"
  }
}
